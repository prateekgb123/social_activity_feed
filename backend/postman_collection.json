              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"securePassword123\"\n}"
            },
            "url": {
              "raw": "{{API_URL}}/auth/login",
              "host": [
                "{{API_URL}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "  try {",
                  "    const json = pm.response.json();",
                  "    if (json.token) {",
                  "      pm.environment.set('AUTH_TOKEN', json.token);",
                  "      console.log('AUTH_TOKEN saved to environment');",
                  "    }",
                  "    if (json.user) {",
                  "      pm.environment.set('CURRENT_USER_ID', json.user.id || json.user._id);",
                  "    }",
                  "  } catch (e) { console.log('Failed to parse login response', e); }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "response": []
        }
